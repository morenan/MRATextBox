        <-->
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <v:MRATextVirtualizeStackPanel VirtualizingPanel.VirtualizationMode="Recycling" VirtualizingPanel.CacheLength="3"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <!-->
        <Setter Property="ItemTemplate">
